# i3 Configuration File

####
#
# Autostart Settings
#
####


set $refresh_i3status killall -SIGUSR1 i3status

# Disable gnome desktop but keep the background setting
exec --no-startup-id gsettings set org.gnome.gnome-flashback desktop false
exec --no-startup-id gsettings set org.gnome.gnome-flashback root-background true

# Autostart Applications
#exec_always --no-startup-id feh --bg-scale ~/wallpaper.jpg
exec --no-startup-id picom -b
exec_always --no-startup-id /home/yoyo/.local/bin/autotiling
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec xset r rate 300 50 &

